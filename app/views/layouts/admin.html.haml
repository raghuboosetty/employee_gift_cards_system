!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title ZaggleCards
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
      %a.navbar-brand{:href => "#"} Zaggle
      %ul.navbar-nav
        %li.nav-item{class: active_link_class('card_types')}
          = link_to 'Card Types', admin_card_types_path, class: 'nav-link'
        %li.nav-item{class: active_link_class('merchant_category_codes')}
          = link_to 'MCC', admin_merchant_category_codes_path, class: 'nav-link'
        %li.nav-item{class: active_link_class('cards')}
          = link_to 'Cards', admin_cards_path, class: 'nav-link'
        %li.nav-item{class: active_link_class('employees')}
          %a.nav-link{:href => "#"} Employees
      %ul.nav.navbar-nav.ml-auto
        %li.nav-item
          %span.navbar-text
            = current_admin.email
            |
        %li.nav-item
          = link_to 'Sign out', destroy_admin_session_path, method: :delete, class: 'nav-link'

    .container-fluid
      %p.alert= alert
      = yield
